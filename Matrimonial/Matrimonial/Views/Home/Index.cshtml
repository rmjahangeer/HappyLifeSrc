@model Matrimonial.Models.UserProfile
@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Images/mat/34.jpg" alt="First slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1 class="heading">Happy Life</h1>
                    <h4>The best way to find your life partner.</h4>
                    <p class="lead">Some things Really matter...</p>
                    <p>
                        <a class="btn btn-lg btn-primary" href="#"
                           role="button" data-slide="next">See More</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/mat/27.jpg" alt="Second slide">
            <div class="container">
                <div class="carousel-caption">
                    <h1>Some More.</h1>
                    <p class="lead">
                        Just Create a profile and navigate through the
                        profile.
                    </p>
                    <p>
                        <a class="btn btn-lg btn-primary" href="#"
                           role="button">See More</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="item">
            <img src="~/Images/mat/29_wedding-rings-wallpaper1.jpg" alt=" third slide">
            <div class="container">
                <div class="carousel-caption">
                    <h3>
                        Easy Steps to Sign up<a href="@Url.Action("Register","Account")">Happy Life</a>
                    </h3>
                    <p>
                        <a class="btn btn-lg btn-primary" href="#"
                           role="button">See More</a>
                    </p>
                </div>
            </div>
        </div>
        
        <div class="item">
            <img src="~/Images/mat/30.jpg" alt=" third slide">
            <div class="container">
                <div class="carousel-caption">
                    <h3>
                        Easy Steps to Sign up<a href="#">Happy Life</a>
                    </h3>
                    <p>
                        <a class="btn btn-lg btn-primary" href="#"
                           role="button">See More</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button"
       data-slide="prev">
        <span class="icon-prev"
              aria-hidden="true"></span> <span class="sr-only">Previous</span>
    </a> <a class="right carousel-control" href="#myCarousel" role="button"
            data-slide="next">
             <span class="icon-next" aria-hidden="true"></span>
             <span class="sr-only">Next</span>
         </a>
</div>

