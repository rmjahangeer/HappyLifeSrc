<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="img/x-icon" href="~/Images/img/icon2.png">
    <link href="~/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href="~/css/jquery-ui.css" rel="stylesheet" type="text/css">
    <link href="~/css/form.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/css/themes/bootstrap (7).css">
    <link rel="stylesheet" type="text/css" href="~/css/mystyle.css">
    <link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/JS/jquery-2.1.4.js"></script>
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed"
                        data-toggle="collapse" data-target="#navbar" aria-expanded="false"
                        aria-controls="navbar">
                    <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")">
                    <img alt="Happy Life" src="~/Images/img/logo1.png">
                </a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <div style="clear: both"></div>


    <div id="footer" class="nav" style="padding-bottom: 65px;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed"
                        data-toggle="collapse" data-target="#navbarf" aria-expanded="False"
                        aria-controls="navbar">
                    <span class="icon-bar label-info"></span>
                    <span class="icon-bar label-info"></span>
                    <span class="icon-bar label-info"></span>
                </button>
            </div>
            <div id="navbarf" class="collapse navbar-collapse">
                <div class="row">
                    <div class="col-md-4">
                        <h3>Quick Links</h3>
                        <ul>
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About Us", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                            <li>@Html.ActionLink("FAQ's", "FAQs", "Home")</li>
                        </ul>
                    </div>

                    <div class="col-md-4">
                        <h3 class="nice_fnt">Company</h3>
                        <ul class=".ftr">
                            <li>@Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home")</li>
                            <li>@Html.ActionLink("Terms and Conditions", "TermsAndConditions", "Home")</li>
                            @*<li>@Html.ActionLink("FAQ's", "FAQs", "Home")</li>*@
                        </ul>
                    </div>

                    <div class="col-md-4">
                        <h3 class="nice_fnt">We're Social</h3>
                        <ul class=".ftr">
                            <li>
                                <a href="https://www.facebook.com/RMJahangeer"
                                   target="_blank"><i class="fa fa-2x fa-facebook"></i></a> Facebook
                            </li>
                            <li>
                                <a href="https://plus.google.com/100856427041410332112/"
                                   target="_blank"><i class="fa fa-2x fa-google-plus"></i></a>Google+
                            </li>
                            <li>
                                <a href="https://twitter.com/rmjahangeer" target="_blank">
                                    <i class="fa fa-2x fa-twitter"></i>
                                </a>Twitter
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="copywrite" class="navbar-fixed-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p>
                        <span><i class="fa fa-copyright"></i></span>2015&ndash;2015 Happy Life
                    </p>
                    <p id="date_time" class="pull-right">@DateTime.Now.ToString("D")</p>

                </div>
            </div>
        </div>
    </div>
    
    @*<script src="~/JS/jquery-min.js"></script>*@
    <script src="~/JS/jquery-ui.js"></script>
    <script src="~/JS/bootstrap.js"></script>
    <script src="~/JS/carousel.js"></script>
    <script src="~/JS/jquery.dataTables.min.js"></script>
    <script src="~/JS/dataTables.bootstrap.js"></script>
    <script src="~/JS/myscripts.js"></script>
